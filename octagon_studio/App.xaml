<Application x:Class="octagon_studio.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:octagon_studio"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Basic components' resources -->
                <ResourceDictionary Source="dicts/Basic.xaml"/>
                <ResourceDictionary Source="dicts/Icons.xaml"/>

                <!-- Main window resources -->
                <ResourceDictionary Source="dicts/MainWindow.xaml"/>
                <ResourceDictionary Source="dicts/Startup.xaml"/>
                
                <!-- Window "Create project" resources -->
                <ResourceDictionary Source="dicts/CreateProject.xaml"/>
                
                <!-- Window "Program parameters" resources -->
                <ResourceDictionary Source="dicts/ProgParams.xaml"/>
                
                <!-- Window "Program notes" resources -->
                <ResourceDictionary Source="dicts/ProgramNotes.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
