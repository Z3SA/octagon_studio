{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "rules": {
    "trailing-comma": true,
    "semicolon": true,
    "ordered-imports": false
  },
  "linterOptions": {
    "exclude": [
      "configs/*.js",
      "node_modules/**/*.ts",
      "/internals",
      "/dll",
      "babel.config.js",
      "**/*.js",
      "*.js"
    ]
  }
}
